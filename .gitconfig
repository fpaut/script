[user]
	name = Frederic Paut
	email = frederic.paut@diasys-technologies.com
[cola]
	spellcheck = false
	blameviewer = git gui blame
[diff]
	tool = "WinMerge"
[merge]
	tool = "WinMerge"
[credential]
	helper = wincred
[alias]
	co = checkout
	unstage = reset HEAD --
	last = log -1 HEAD
	br = branch
	ci = commit
	dt = difftool -y
	lg = log -30 --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	mg = merge --strategy-option theirs
	mt = mergetool -y
	sd = "!bash -c 'repoGit=$(git rev-parse --git-dir 2>/dev/null); BRANCH=$(cat $repoGit/HEAD); BRANCH=${BRANCH##*/}; BSTASH=$(git stash list | grep $BRANCH); BSTASH=${BSTASH%%:*}; if [[ \"$BSTASH\" != \"\" ]]; then git stash drop $BSTASH; else echo No Stash for branch \\\"$BRANCH\\\"; fi'"
	sl = stash list
	sp = "!bash -c 'repoGit=$(git rev-parse --git-dir 2>/dev/null); BRANCH=$(cat $repoGit/HEAD); BRANCH=${BRANCH##*/}; BSTASH=$(git stash list | grep $BRANCH); BSTASH=${BSTASH%%:*}; if [[ \"$BSTASH\" != \"\" ]]; then git stash pop $BSTASH; else echo No Stash for branch \\\"$BRANCH\\\"; fi'"
	ss = "!bash -c 'vers=$(git status | grep version.c); if [[ \"$vers\" != \"\"  ]]; then echo Files version found. Discarding...; git checkout -- *version.c; git stash save; else echo No Files version version; git stash save; fi'"
	st = "!bash -c 'echo -e \"\\033[0;44mOnly tracked files! (stu for untracked, sta for all)\\033[0;0m\"' && git status -s | grep -v "??""
	sta = "!bash -c 'echo -e \"\\033[0;44mNormal git status\\033[0;0m\"' && git status"
##	std = "!bash -c 'repoGit=$(git rev-parse --git-dir 2>/dev/null); BRANCH=$(cat $repoGit/HEAD); BRANCH=${BRANCH##*/}; BSTASH=$(git stash list | grep $BRANCH); BSTASH=${BSTASH%%:*}; if [[ \"$BSTASH\" != \"\" ]]; then echo $BSTASH; else echo No Stash for branch \\\"$BRANCH\\\"; fi'"
	stu = "!bash -c 'echo -e \"\\033[0;44mOnly untracked files! (st for tracked files, sta for all)\\033[0;0m\"' && git status -s | grep "??""
	sw = stash show
[core]
	autocrlf = true
	filemode = false
	excludesfile = 
[push]
	default = matching
[gui]
	historybrowser = C:/Users/fpaut/AppData/Local/git-cola/Python/python.exe C:/Users/fpaut/AppData/Local/git-cola/bin/git-cola-script.py dag --repo C:/Users/fpaut/dev/STM32_Toolchain/dt-arm-firmware
	recentrepo = D:/Users/fpaut/dev/STM32_Toolchain/dt-arm-firmware
	encoding = utf-8
[difftool "sourcetree"]
	cmd = 'C:/Program Files/WinMerge/WinMergeU.exe' $LOCAL $REMOTE
[mergetool "sourcetree"]
	cmd = 'C:/Program Files/WinMerge/WinMergeU.exe' $LOCAL $REMOTE $MERGED
	trustExitCode = true
[difftool]
    tool = /cygdrive/c/Program Files/WinMerge/WinMergeU.exe
[mergetool]
    tool = /cygdrive/c/Program Files/WinMerge/WinMergeU.exe
